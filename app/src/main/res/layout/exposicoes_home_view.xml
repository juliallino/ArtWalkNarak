<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    >

    <TextView
        android:id="@+id/nomeObra"
        android:text="Nome da Exposição"
        android:textStyle="bold"
        android:textColor="@color/azulemedio"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        >
    </TextView>

    <ImageButton
        android:id="@+id/imagemObra"
        android:layout_width="285dp"
        android:layout_height="100dp"
        android:layout_below="@+id/nomeObra"
        android:contentDescription="Botão da imagem"
        android:src="@drawable/centelhas"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/editExposicao"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_alignTop="@+id/imagemObra"
        android:layout_toEndOf="@+id/imagemObra"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Botão para editar a exposição"
        android:src="@drawable/baseline_edit_24"
        ></ImageButton>


</RelativeLayout>