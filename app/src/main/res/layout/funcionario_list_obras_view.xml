<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_margin="10dp"
    android:backgroundTint="@color/azulclaro"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">
<RelativeLayout
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
    <ImageButton
        android:id="@+id/imagemObra"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="BotÃ£o da imagem"
        android:scaleType="fitXY"
        android:backgroundTint="@color/white"
        android:background="@color/azulclaro"></ImageButton>

    <ImageView
        android:id="@+id/editObra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-36dp"
        android:layout_alignEnd="@id/imagemObra"
        android:src="@drawable/edit"></ImageView>
</RelativeLayout>
</androidx.cardview.widget.CardView>